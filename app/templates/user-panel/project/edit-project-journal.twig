{% extends 'user-panel/master.twig' %}

{% block section %}
	<div class="tabs">
     <ul>
      {% if is_state('upload-proposals') and proposals_available() %}
			<li><a href="{{path_for('showUserPanelUpdateProject',{'pro':proyecto.id})}}"><i class="fas fa-edit fa-lg"></i>&nbsp;Editar datos</a></li>
			<li><a href="{{path_for('showUserPanelProjectFiles',{'pro': proyecto.id})}}"><i class="fas fa-upload fa-lg"></i>&nbsp;Archivos</a></li>
			<li><a href="{{path_for('showUserPanelProjectImagen',{'pro': proyecto.id})}}"><i class="fas fa-image fa-lg"></i>&nbsp;Portada</a></li>
			{% endif %}
			<li class="is-active"><a href="{{path_for('showUserPanelProjectJournal',{'pro':proyecto.id})}}"><i class="fas fa-history fa-lg"></i>&nbsp;Historial</a></li>
    </ul>
  </div>
  <project-journal :project="{{proyecto|json_encode}}" :project-fields="{{projectFields|json_encode}}" :users="{{users|json_encode}}">
    {% include 'base/loading.twig' %}
  </project-journal>
{% endblock %}
